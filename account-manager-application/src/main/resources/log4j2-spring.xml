<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="account-manager-application"
               xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%date{DEFAULT}] %-5level %logger(%file:%line) - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>